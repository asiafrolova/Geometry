<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Geometry" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/orange</item>
        <item name="android:icon">@drawable/baseline_contact_support_24_dark</item>
        <item name="android:roundIcon">@drawable/baseline_contact_support_24_dark</item>

        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>


    <style name="SCREEN" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="TEXT">
        <item name="android:textColor" parent="Base.Theme.Geometry">@color/white</item>
    </style>

    <style name="BUTTON" parent="Base.Theme.Geometry">
        <item name="android:background" parent="Base.Theme.Geometry">@drawable/button_style_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="VIEW">
        <item name="android:background" parent="Base.Theme.Geometry">@drawable/help_dark</item>
    </style>
    <style name="EDITTEXT">
        <item name="android:textColor" parent="Base.Theme.Geometry">@color/white</item>
    </style>
    <style name="SWITCH">
        <item name="thumbTint">@color/orange</item>
        <item name="trackTint">@color/yellow</item>

    </style>
    <style name="IMAGE">
        <item name="background">@drawable/correct_dark</item>

    </style>



</resources>